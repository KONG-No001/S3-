<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.dao.DeliveryDao">

    <resultMap id="DeliveryMap" type="com.gp.vo.DeliveryVo">

        <result property="userId" column="user_id"/>
        <result property="shopId" column="sh_id"/>

        <association property="user" javaType="com.gp.vo.User"
                     column="user_id" select="com.gp.dao.UserDao.queryById">
        </association>
        <association property="shanghu" javaType="com.gp.vo.Shanghu"
                     column="shop_id" select="com.gp.dao.ShanghuDao.queryShanghuId">
        </association>
    </resultMap>

    <select id="selectPageVo" resultMap="DeliveryMap">
        select * from delivery
        <where>
            <if test="deliveryVo !=null">
                <if test="deliveryVo.userId != null and deliveryVo.userId!=''">and user_id =#{deliveryVo.userId}</if>
            </if>
        </where>
    </select>
</mapper>
