<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.dao.ShanghuDao">
	<!-- 根据id查 -->
	<select id="queryShanghuId" parameterType="int" resultType="Shanghu">
		select * from shanghu where sh_id=#{sh_id}
	</select>
	<!-- 查所有 -->
	<select id="queryShanghuAll" parameterType="Shanghu" resultType="Shanghu">
		select * from shanghu
		<where>
			<if test="sh_name != null and sh_name!=''">and sh_name like CONCAT('%',#{sh_name},'%')</if>
		</where>
	</select>
	<!-- 条数 -->
	<select id="ShanghuCount" parameterType="Shanghu" resultType="int">
		select count(*) from shanghu
		<where>
			<if test="sh_name != null and sh_name!=''">and sh_name like CONCAT('%',#{sh_name},'%')</if>
		</where>
	</select>
	<!-- 添加 -->
	<insert id="addShanghu" parameterType="Shanghu">
        insert into shanghu values (null,#{sh_name},#{sh_phone},#{sh_image},#{sh_address},#{sh_createtime})
    </insert>

	<!-- 修改 -->
	<update id="updateShanghu" parameterType="Shanghu">
        update shanghu set sh_name=#{sh_name},sh_phone=#{sh_phone},sh_image=#{sh_image},sh_address=#{sh_address},sh_createtime=#{sh_createtime}
        where sh_id = #{sh_id}
    </update>

	<!-- 删除 -->
	<delete id="deleteShanghu" parameterType="int">
        delete from shanghu where sh_id = #{sh_id}
    </delete>

</mapper>